<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="Project" assembly="Project">

    <class name="WorkArea" table="WorkArea">
        <id name="Id">
            <column name="work_Id" sql-type="int" not-null="true"/>
            <generator class="native"/>
        </id>
        <!-- A cat has to have a name, but it shouldn' be too long. -->
        <property name="Name">
            <column name="Name" length="100" not-null="true"/>
        </property>
    </class>
    <class name="Employee" table="Employee">
        <id name="Id">
            <column name="employee_Id" sql-type="int" not-null="true"/>
            <generator class="native"/>
        </id>
        <property name="FirstName"/>
        <property name="LastName"/>
        <property name="UserGroup"/>
        <property name="EmployeeTitle"/>
    </class>
    <class name="Orders" table="Orders">
        <id name="Id">
            <column name="order_Id" sql-type="int" not-null="true"/>
            <generator class="native"/>
        </id>
        <property name="OrderNo"/>
    </class>
    <class name="JobTitle" table="JobTitle">
        <id name="Id">
            <column name="job_title_id" sql-type="int" not-null="true"/>
            <generator class="native"/>
        </id>
        <property name="TitleValue"/>
    </class>
    <class name="JobClass" table="JobClass">
        <id name="Id">
            <column name="job_class_Id" sql-type="int" not-null="true"/>
            <generator class="native"/>
        </id>
        <property name="Name"/>
        <property name="ClassNo"/>
    </class>
    <class name="JobCard" table="JobCard">
        <id name="Id">
            <column name="job_card_id" sql-type="int" not-null="true"/>
            <generator class="native"/>
        </id>
        <property name="JobCardNo"/>
        <property name="JobTitle"/>
        <property name="JobDescription"/>
        <property name="WorkArea"/>
        <property name="JobClass"/>
        <property name="OrderList"/>
        <property name="CreateDate"/>
        <property name="StartTime"/>
        <property name="EndTime"/>
        <property name="IsWorkDoneSatisfactory"/>
        <property name="IsNeedReplacement"/>
        <property name="IsRecurringJob"/>
        <property name="IsTimeFrameSatisfactory"/>
        <property name="IsJobDoneToExpectations"/>
        <property name="OtherExplanation"/>
        
        
        
    </class>

</hibernate-mapping>